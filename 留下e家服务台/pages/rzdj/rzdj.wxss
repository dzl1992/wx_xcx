page {
  width: 100%;
  min-height: 100%;
 }
 
.cotent {
  width: 100%;
  height: 100%;
  position: relative;
  padding-top: 32rpx;
  background-color: #f7f6fc;
}
.top {
  width: 99%;
  height: auto;
}
.top_index {
  position: relative;
  border-top: 1rpx solid #e0e0e0;
  width: 100%;
  height: auto;
  background-color: #fff;
}
.top_index > label, .top_index > input, .top_index > picker, radio-group {
  display: inline-block;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  color: #333;
}
.top_index > label {
  position: absolute;
  left: 32rpx;
}
.top_index > input, .top_index > picker {
  width: 600rpx;
  margin-left: 120rpx;
}
.top_index > radio-group {
  margin-left: 180rpx;
  width: 400rpx;
}
radio {
  zoom: 70%;
}
.radio {
  margin-right: 20rpx;
  display: inline-block;
  position: relative;
  width: 25%;
  height: auto;
}
.radio > text {
  display: inline-block;
  position: absolute;
  width: auto;
  height: auto;
  right: 0;
  top: 4rpx;
}
.address {
  margin-left: 150rpx;
}
::-webkit-scrollbar {  
  width: 0;  
  height: 0;  
  color: transparent;  
}  
.sfz > input {
  margin-left: 140rpx;
}
.bz {
  border-bottom: 1rpx solid #e0e0e0;
}
.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: auto;
  padding-left:0px;
  padding-right:0px;
  margin-left:0rpx;
  margin-right:0rpx;
  border-radius: 0rpx;
  background-color: #ccc;
  color: #fff;
}
.cen {
  width: 100%;
  margin-top: 64rpx;
}
.cen_top {
  width: 94%;
  height: 40rpx;
  padding-left: 5%;
}
.cen_top > image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -4rpx;
}
.cen_top > text {
  font-size: 30rpx;
  margin-left: 16rpx;
}
.cen_cen {
  width: 94%;
