/* pages/sgpm/sgpm.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f7f6fc;
}
.content0 {
  width: 100%;
  height: 100%;
}
.No_cen {
  width: 50%;
  height: 25%;
  position: absolute;
  left: 25%;
  top: 30%;
  text-align: center;
}
.No_cen > image {
  width: 100rpx;
  height: 100rpx;
} 
.No_cen > view {
  font-size: 28rpx;
  color: #999;
}
.section {
  padding-top: 32rpx;
  width: 90%;
  padding-left: 5%;
  position: relative;
}
.section image {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 200rpx;
  top: 36rpx;
}
.table {
  width: 100%;
  height: auto;
  margin-top: 32rpx;
}
.thead {
  width: 100%;
  height: 96rpx;
  background-color: #ccc;
  display: flex;
}
.thead > text{ 
  flex: 1;
  font-size: 28rpx;
  line-height: 96rpx;
  text-align: center;
}
/* .thead > text:last-child {
  text-align: left;
} */
.tbody {
  width: 100%;
  height: auto;
}
.tbody_tr {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  display: flex;
  position: relative;
  border-bottom: 1rpx solid #e0e0e0;
}
.tbody_tr > text {
  flex: 1;
  font-size: 28rpx;
  line-height: 96rpx;
  text-align: center;
}
.tbody_tr > image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}
