/* pages/sbxx/sbxx.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f7f6fc;
 }
.cot0_top {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
}
.top_index {
  position: relative;
  border-top: 1rpx solid #e0e0e0;
  width: 100%;
  height: auto;
  background-color: #fff;
}
.top_index > label, .top_index > input {
  display: inline-block;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  color: #333;
}
.top_index > label {
  position: absolute;
  left: 32rpx;
}
.top_index > input {
  width: 600rpx;
  margin-left: 120rpx;
}
.address > input {
   margin-left: 180rpx;
}
.top_index > textarea {
  padding-top: 30rpx;
  display: inline-block;
  min-height: 80rpx;
  width: 540rpx;
  margin-left: 180rpx;
  font-size: 28rpx;
  color: #333;
  overflow-y: hidden;
  white-space: normal;
  word-break:break-all;
}
::-webkit-scrollbar {  
  width: 0;  
  height: 0;  
  color: transparent;  
}  
.suo {
  width: 100%;
  line-height: 96rpx;
  height: 96rpx;
  position: relative;
}
.suo > input {
  width: 64%;
  margin-left: 160rpx;
  font-size: 32rpx;
  height: 98%;
}
.suo > text {
  position: absolute;
  font-size: 32rpx;
  color: #333;
  right: 32rpx;
}
.bz {
  border-bottom: 1rpx solid #e0e0e0;
}
.bz > textarea {
  margin-left: 120rpx;
}
.cot0_top  button {
  position: absolute;
  bottom: 0px;
  width: 100%;
}